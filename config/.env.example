# 应用配置
SECRET_KEY=your-secret-key-here
DEBUG=False
APP_ENV=production  # 可选：development, testing, production

# 数据库配置
DATABASE_PATH=instance/essay_correction.db

# 上传文件配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760  # 10MB

# AI服务配置
AI_API_KEY=your-api-key-here
AI_BASE_URL=https://api.example.com/ai
AI_MODEL=your-model-name
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_TIMEOUT=60

# 邮件服务配置
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Celery配置（异步任务队列）
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# WebSocket配置
WEBSOCKET_CORS_ALLOWED_ORIGINS=*

# 用户配置
FREE_ESSAYS_LIMIT=10
REGULAR_MONTHLY_ESSAYS=300
REGULAR_DAILY_ESSAYS=30
PREMIUM_MONTHLY_ESSAYS=500
PREMIUM_DAILY_ESSAYS=60 